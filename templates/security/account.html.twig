{% extends 'base.html.twig' %}
{% block body %}
<div class="section no-pad-bot">
  <div class="container">
    <h1 class="header center orange-text">
      {% if mode == 'new' %}Account Opening{% endif %}
      {% if mode == 'edit' %}Account Edit{% endif %}
      {% if mode == 'created' %}Account Created{% endif %}
      {% if mode == 'updated' %}Account Updated{% endif %}
    </h1>
    {% if form.vars.errors|length > 0 %}
      <div class="row center">
        <h5 class="header col s12 light red-text">{{ form_errors(form) }}</h5>
      </div>
    {% endif %}
    <div class="row center">
      {% if mode == 'new' %}
        {{ form_start(form, {'action': path('acc_create'), 'method': 'POST'}) }}
      {% endif %}
      {% if mode == 'edit' %}
        {{ form_start(form, {'action': path('acc_update'), 'method': 'POST'}) }}
      {% endif %}
        {% if mode == 'new' %}
          {{ form_widget(form.accountId, { 'attr': {'style': 'display:none'} }) }}
        {% else %}
          <div class="row">
            <div class="input-field col s12">
              {{ form_widget(form.accountId) }}
              {{ form_label(form.accountId) }}
              {{ form_errors(form.accountId) }}
            </div>
          </div>
        {% endif %}
        <div class="row">
          <div class="input-field col s12">
            {{ form_widget(form.accountName) }}
            {{ form_label(form.accountName) }}
            {{ form_errors(form.accountName) }}
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            {{ form_widget(form.passportId) }}
            {{ form_label(form.passportId) }}
            {{ form_errors(form.passportId) }}
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            {{ form_widget(form.phone) }}
            {{ form_label(form.phone) }}
            {{ form_errors(form.phone) }}
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            {{ form_widget(form.address) }}
            {{ form_label(form.address) }}
            {{ form_errors(form.address) }}
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6 left">
            {{ form_widget(form.currency) }}
            {{ form_label(form.currency) }}
            {{ form_errors(form.currency) }}
          </div>
          <div class="input-field col s6 right">
            {{ form_widget(form.credit) }}
            {{ form_label(form.credit) }}
            {{ form_errors(form.credit) }}
          </div>
        </div>
        {% if mode in ['new','edit'] %}
          <div class="row">
            <div class="col s12">
                <button class="btn waves-effect waves-light right" type="submit" name="action">
                  {% if mode == 'new' %}Create{% else %}Update{% endif %}
                  <i class="material-icons right">send</i>
                </button>
            </div>
          </div>
        {% endif %}
        <div class="row">
          <div class="col s12">
            {% if mode == 'new' %}
              <a href="/welcome" class="waves-effect waves-light btn left"><i class="material-icons">keyboard_backspace</i> Back to Main Menu</a>
            {% else %}
              <a href="/acc_list" class="waves-effect waves-light btn left"><i class="material-icons">keyboard_backspace</i> Back to Account Maintenance</a>
            {% endif %}
          </div>
        </div>
      {% if mode in ['new','edit'] %}
        {{ form_end(form) }}
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}